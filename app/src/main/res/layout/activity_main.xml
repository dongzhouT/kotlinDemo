<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <com.example.kotlindemo.DashBoardView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:visibility="gone"></com.example.kotlindemo.DashBoardView>

    <com.example.kotlindemo.PieView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="20dp"
        android:visibility="gone" />

    <com.example.kotlindemo.AvatarView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:visibility="gone" />

    <com.example.kotlindemo.XfermodeView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:visibility="gone" />

    <com.example.kotlindemo.animator.CircleView
        android:id="@+id/circleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.example.kotlindemo.CameraView
        android:id="@+id/cameraView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.example.kotlindemo.animator.PointFView
        android:id="@+id/pointView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <com.example.kotlindemo.animator.ProvinceView
        android:id="@+id/provinceView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
